{
  "$schema": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/schemas/2016-11-28/dtlArtifacts.json",
  "title": "VSO",
  "publisher": "DanielMeixner",
  "description": "Registers a headless, self-hosted VS Online environment.",
  "tags": [
    "DevBox"
  ],
  "targetOsType": "Windows",
  "parameters": {
    "mail": {
      "type": "string",
      "displayName": "mail",
      "description": "Email address where code is sent to."
    },
    "resourcegroup": {
      "type": "string",
      "displayName": "resourcegroup",
      "description": "Resource Group of VSO plan"
    },
    "subscriptionid": {
      "type": "string",
      "displayName": "subscriptionid",
      "description": "Subscription ID"
    },
    "planname": {
      "type": "string",
      "displayName": "planname",
      "description": "Name of VSO Plan"
    }
  },
  "runCommand": {
    "commandToExecute": "[concat('powershell.exe  ./install.ps1 ' , ' -mail ', parameters('mail'), ' -resourcegroup ', parameters('resourcegroup'),' -subscriptionid ', parameters('subscriptionid'),  ' -planname ', parameters('planname') ) ]"
  }
}